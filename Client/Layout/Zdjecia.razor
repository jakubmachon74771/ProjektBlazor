<div class="gallery">
    @foreach (var photoPath in GetPhotoPaths())
    {
        <img src="photos/@photoPath" style="display: @((photoPath == CurrentPhotoPath) ? "block" : "none"); width: 500px; height: 500px" />
    }
</div>

<div style="text-align: left;">
    <button @onclick="ShowPreviousPhoto" style="margin-left: 100px">Poprzednie zdjęcie</button>
    <button @onclick="ShowNextPhoto">Następne zdjęcie</button>
</div>


@code {
    private string[] GetPhotoPaths()
    {
        return new string[] { "1.jpg", "2.jpg", "3.jpg", "4.jpg", "5.jpg", "6.jpg", "7.jpg", "8.jpg", "9.jpg", "10.jpg", "11.jpg", "12.jpg", "13.jpg", "14.jpg", "15.jpg", "16.jpg", "17.jpg", "18.jpg", "19.jpg", "20.jpg", "21.jpg" };
    }

    private int currentPhotoIndex = 0;

    private string CurrentPhotoPath => GetPhotoPaths()[currentPhotoIndex];

    private void ShowNextPhoto()
    {
        var photoPaths = GetPhotoPaths();
        currentPhotoIndex = (currentPhotoIndex + 1) % photoPaths.Length;
    }

    private void ShowPreviousPhoto()
    {
        var photoPaths = GetPhotoPaths();
        currentPhotoIndex = (currentPhotoIndex - 1 + photoPaths.Length) % photoPaths.Length;
    }
}
